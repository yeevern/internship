{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "paths": {
      "@nanikore/libs-chime": ["libs/nanikore/chime/src/index.ts"],
      "@nanikore/libs-event": ["libs/nanikore/event/src/index.ts"],
      "@nanikore/libs-project": ["libs/nanikore/project/src/index.ts"],
      "@nanikore/libs-survey": ["libs/nanikore/survey/src/index.ts"],
      "@nanikore/libs-user": ["libs/nanikore/user/src/index.ts"],
      "@nanikore/libs-profile": ["libs/nanikore/profile/src/index.ts"],
      "@netizen/ui": ["libs/ui/src/index.ts"],
      "@netizen/ui/server": ["libs/ui/src/server.ts"],
      "@netizen/utils-aws": ["libs/utils/aws/src/index.ts"],
      "@netizen/utils-aws-cdk": ["libs/utils/aws-cdk/src/index.ts"],
      "@netizen/utils-env": ["libs/utils/env/src/index.ts"],
      "@netizen/utils-hooks": ["libs/utils/hooks/src/index.ts"],
      "@netizen/utils-next": ["libs/utils/next/src/index.ts"],
      "@netizen/utils-string": ["libs/utils/string/src/index.ts"],
      "@netizen/utils-types": ["libs/utils/types/src/index.ts"],
      "@netizen/utils-ui": ["libs/utils/ui/src/index.ts"],
      "@/*": ["apps/nanikore/website/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "script/dev-setup.mts"],
  "exclude": ["node_modules"]
}
