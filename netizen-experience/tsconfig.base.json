      "@nanikore/infra-profile": ["libs/nanikore/profile/src/infra.ts"],
      "@nanikore/infra-project": ["libs/nanikore/project/src/infra.ts"],
      "@nanikore/infra-survey": ["libs/nanikore/survey/src/infra.ts"],
      "@nanikore/infra-user": ["libs/nanikore/user/src/infra.ts"],
      "@nanikore/libs-chime": ["libs/nanikore/chime/src/index.ts"],
      "@nanikore/libs-event": ["libs/nanikore/event/src/index.ts"],
      "@nanikore/libs-profile": ["libs/nanikore/profile/src/index.ts"],
      "@nanikore/libs-project": ["libs/nanikore/project/src/index.ts"],
      "@nanikore/libs-survey": ["libs/nanikore/survey/src/index.ts"],
